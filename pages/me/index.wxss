.profile-bg {
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    height: 254rpx;
    width: 100%;
    z-index: -1;
}
.me-info {
    margin-top: 40rpx;
    padding: 0rpx 30rpx 50px 30rpx;
}
.flex-row{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.info-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}
.info-detail {
    flex: 1;
    margin-left: 30rpx;
}
.name {
    color: white;
    font-size: 13pt;
}
.info-id {
    color: white;
    font-size: 10pt;
    margin-top: 13rpx;
}
.white-box {
    justify-content: space-between;
    margin-top: 43rpx;
}
.item-box {
    position: relative;
    justify-content: center;
    background-color: white;
    height: 156rpx;
    width: 330rpx;
    border-radius: 20rpx;
    color: #333333;
    font-size: 11pt;
}
.item-shadow {
    position: absolute;
    bottom: 0;
    height: 120rpx;
    width: 330rpx;
    background-color: rgba(0,0,0,0);
    box-shadow: 0rpx 10rpx 10rpx #F5F0EF;
    border-radius: 20rpx;
}
.item-image {
    height: 96rpx;
    width: 96rpx;
    margin-right: 48rpx;
}
.list-box {
    margin-top: 44rpx;
    color: #333333;
    font-size: 10.5pt;
    font-weight: 500;
}
.item-list {
    justify-content: space-between;
    font-size: 10pt;
    padding: 32rpx 0rpx;
}

.tip {
    margin-left: 22rpx;
}
.list-image {
    width: 44rpx;
    height: 44rpx;
    border-radius: 50%;
}
.list-go {
    width: 22rpx;
    height: 22rpx;
}

.border {
    border-top: solid #EBEDF1 1rpx;
}


/*日期选择器样式*/
.mask {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0px;
    background: rgba(100, 100, 100, 0.6);
    z-index: 9999;
}

.content {
    position: absolute;
    bottom: 0px;
    left: 0px;
    display: flex;
    flex-direction: column;
    height: 220px;
    width: 100%;
    background-color: white;
}

.header {
    display: flex;
    width: 100%;
    height: 80rpx;
    align-items: center;
    justify-content: space-between;
    padding-left: 60rpx;
    padding-right: 100rpx;
    font-size: 16px;
}

.select {
    height: 100rpx;
    color: black;
}

.cancel {
    color: #8a8a8a;
}

.confirm {
    color: dodgerblue;
    position: relative;
    right: 130rpx;
}

.pick-view {
    height: 360rpx;
    width: 100%;
}

.item {
    line-height: 100rpx;
    text-align: center;
}

/* 按钮样式 */
.btn {
    /* width: 300rpx; */
    border: none;
    background-color: transparent;
    padding: 0rpx;
    color: white;
    font-size: 10pt;
    text-align: left;
}